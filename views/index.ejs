<%- include("partials/header") %> 
    <div>
        <h1>Create Account</h1>

        <form action="/" method="POST">
            <label for="firstname">Firstname</label>
            <input type="text" name="firstname" placeholder="Enter Firsname" <% if (locals.firstname != null) { %> value="<%= firstname %>" <% } %> ><br>
            <label for="lastname">Lastname</label>
            <input type="text" name="lastname" placeholder="Enter Lastname" <% if (locals.lastname != null) { %> value="<%= lastname %>" <% } %>><br>
            <label for="username">Username</label>
            <input type="text" name="username" placeholder="Enter Username" <% if (locals.username != null) { %> value="<%= username %>" <% } %>><br>
            <label for="email">Email</label>
            <input type="email" name="email" placeholder="Enter Email" <% if (locals.email != null) { %> value="<%= email %>" <% } %>><br>
            <label for="phone">Phone Number</label>
            <input type="number" name="phone" placeholder="Enter Phone Number" <% if (locals.phone != null) { %> value="<%= phone %>" <% } %>><br>
            <label for="password">Password</label>
            <input type="password" name="password" placeholder="Enter Password" <% if (locals.password != null) { %> value="<%= password %>" <% } %>><br>
            <label for="confirmPassword">Confirm Password</label>
            <input type="password" name="confirmPassword" placeholder="Confirm Password" <% if (locals.confirmPassword != null) { %> value="<%= confirmPassword %>" <% } %>><br>
            <input type="submit">
        </form>

        <% if(locals.error != null) { %> 
            <% for (const i of error) { %>
                <p style="color: red;"><%= i %> </p>
            <% } %>
        <% } %> 
        
    </div>
<%- include("partials/footer") %>